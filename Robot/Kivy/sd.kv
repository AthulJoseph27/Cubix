<Button>:
	font_size:40
	color:0.7,0.4,0.8,1
<MyGrid>:
	orientation:'vertical'
	s_c_n:s_c_n
	Image:
    	source: 'anders-jilden-uwbajDCODj4-unsplash.jpg'
		size: self.texture_size
		allow_stretch:True
		keep_ratio:False
	Label:
		color:0.4,0.4,0.8,1
		font_size:80
		text:"CUBIX"
	Button:
		text:"x"
		color:1,0,0,1
		size_hint:0.05,0.05
		pos_hint:{"x":0.95,"top":0.99}
		on_press: app.stop()
	Button:
		id:s_c_n
		size_hint:0.5,0.2
		pos_hint:{"x":0,"bottom":1}
		text:'Scan'
		on_release: root.scan()
	Button:
		id:save
		text:"Save the Scan"if save.state=="normal" else "Saving....."
		size_hint:0.5,0.2
		pos_hint:{"x":0.5,"bottom":1}
		on_release:root.save()

	Button:
		text:"Delete Previous Scan"
		size_hint:0.5,0.1
		pos_hint:{"x":0,"y":0.2}
		on_release: root.delp()
	Button:
		text:"Display"
		size_hint:0.5,0.1
		pos_hint:{"x":0.5,"y":0.2}
		on_release: root.dis()
	Button:
		text:"Settings"
		size_hint:0.5,0.1
		pos_hint:{"x":0,"y":0.3}
		on_release:app.open_settings()
	Button:
		text:"Display Live Feed"
		size_hint:0.5,0.1
		pos_hint:{"x":0.5,"y":0.3}
		on_release: root.dis_live()
